@model iBoox.Models.ChangePasswordModel

@{
    ViewBag.Title = "Изменить пароль";
}

<h1 class="title">@ViewBag.Title</h1>

<p>
    Воспользуйтесь приведенной ниже формой для изменения своего пароля. В новом пароле должно быть минимум <strong>@Membership.MinRequiredPasswordLength символов</strong>.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Пароль не был изменен. Пожалуйста, исправьте ошибки и попробуйте снова.")
    <div>
        <fieldset>
            <legend>Изменение пароля</legend>

            @if (Model.OldPassword == null)
            {
                <div class="editor-label">
                    @Html.LabelFor(m => m.OldPassword)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.OldPassword)
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </div>
            }
            else
            {
                @Html.HiddenFor(m => m.OldPassword)
            }

            <div class="editor-label">
                @Html.LabelFor(m => m.NewPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <p>
                <input type="submit" value="Изменить пароль" />
            </p>
        </fieldset>
    </div>
}
