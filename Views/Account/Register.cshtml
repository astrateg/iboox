@using Recaptcha;
@model RegisterModel

@{
    ViewBag.Title = "Регистрация";
}

<h1 class="title">@ViewBag.Title</h1>
<p>
    Воспользуйтесь приведенной ниже формой для создания нового аккаунта. В новом пароле должно быть минимум <strong>@Membership.MinRequiredPasswordLength символов</strong>.
</p>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Аккаунт не был создан. Пожалуйста, исправьте ошибки и попробуйте снова.")
    <div>
        <fieldset>
            <legend>Информация об аккаунте</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email)
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Password)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.ConfirmPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <div class="editor-label">
                Вы человек?
            </div>
            <div class="editor-field">
                @Html.Raw(Html.GenerateCaptcha("captcha", "clean"))
                @Html.ValidationMessage("captcha")
            </div>

@*            <div class="editor-label">
                @Html.LabelFor(m => m.SecretQuestion)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.SecretQuestion)
                @Html.ValidationMessageFor(m => m.SecretQuestion)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.SecretAnswer)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.SecretAnswer)
                @Html.ValidationMessageFor(m => m.SecretAnswer)
            </div>
*@
            <p>
                <input type="submit" value="Зарегистрироваться" />
            </p>
        </fieldset>
    </div>
}
